{
  "schema": "http://json-schema.org/draft-04/schema",
  "id": "http://uk/gov/hmrc/trustregistration/raml/schemas/test.json",
  "title": "Test Message",
  "type": "object",
  "properties": {
    "message" : {
      "type": "string"
    },
    "code" : {
      "type": "string"
    },
    "location" : {
      "type": "string"
    },
    "name" : {
      "type" : "string"
    },
    "postalCode" : {
      "type": "string",
      "pattern": "^[A-Za-z0-9]{3,4} [A-Za-z0-9]{3}$"
    },
    "numbers" : {
      "type" : "string",
      "maxLength": 9
    }
  },
  "required" : [ "message", "code", "location"]
}